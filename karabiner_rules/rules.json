{
  "title": "House's HHKB",
  "rules": [
    {
      "description": "Change right_command + f/b to move to next/previous word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers" : [
                "option"
              ]
            }
          ]
